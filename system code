    <div id="survey">
        <h1>üé¨ Movie Recommendation System</h1>
        <h3>Choose your Mood & Personality</h3>

        <form id="moodForm">
            <label>
                Mood: 
                <select id="mood">
                    <option>Happy</option>
                    <option>Sad</option>
                    <option>Excited</option>
                    <option>Scary</option>
                    <option>Romantic</option>
                </select>
            </label>

            <label>
                Personality: 
                <select id="personality">
                    <option>Adventurous</option>
                    <option>Shy</option>
                    <option>Romantic</option>
                    <option>Thoughtful</option>
                </select>
            </label>

            <br>
            <button type="submit">üé• Get Recommendations</button>
        </form>
    </div>

    <div id="results" style="display:none;">
        <h2>Your Movie Picks üçø</h2>
        <div id="movies"></div>
    </div>


    <script>
        const movies = {
            horror: [
                { title: "The Conjuring", platforms: ["Netflix"], img: "https://m.media-amazon.com/images/I/71p1sY9qsBL.jpg" },
                { title: "Hereditary", platforms: ["Prime"], img: "https://m.media-amazon.com/images/I/71CMXcA6OoL.jpg" },
                { title: "Insidious", platforms: ["Netflix"], img: "https://m.media-amazon.com/images/I/81P49m4TcoL.jpg" }
            ],
            action: [
                { title: "John Wick", platforms: ["Prime"], img: "https://m.media-amazon.com/images/I/81uZzuzH23L.jpg" },
                { title: "Mad Max: Fury Road", platforms: ["Netflix"], img: "https://m.media-amazon.com/images/I/91+E5Bg8K9L.jpg" },
                { title: "Avengers: Endgame", platforms: ["Hotstar"], img: "https://m.media-amazon.com/images/I/81ExhpBEbHL.jpg" }
            ],
            romance: [
                { title: "La La Land", platforms: ["Prime"], img: "https://m.media-amazon.com/images/I/71W8s8yNjLL.jpg" },
                { title: "The Notebook", platforms: ["Netflix"], img: "https://m.media-amazon.com/images/I/91KkWf50SoL.jpg" },
                { title: "Me Before You", platforms: ["Prime"], img: "https://m.media-amazon.com/images/I/71k6B7C5hDL.jpg" }
            ],
            sad: [
                { title: "A Silent Voice", platforms: ["Netflix"], img: "https://m.media-amazon.com/images/I/71ODUvNbKSL._AC_SL1024_.jpg" },
                { title: "The Fault in Our Stars", platforms: ["Hotstar"], img: "https://m.media-amazon.com/images/I/81q-H9CvWqL.jpg" }
            ],
            happy: [
                { title: "Zootopia", platforms: ["Hotstar"], img: "https://m.media-amazon.com/images/I/91d7+SVr+PL.jpg" },
                { title: "Paddington 2", platforms: ["Prime"], img: "https://m.media-amazon.com/images/I/71J0s8AjtYL.jpg" }
            ]
        };

        document.getElementById('moodForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const mood = document.getElementById('mood').value;
            const personality = document.getElementById('personality').value;

            let genre = "action";
            if (mood === "Scary") genre = "horror";
            if (mood === "Romantic") genre = "romance";
            if (mood === "Sad") genre = "sad";
            if (mood === "Happy") genre = "happy";
            if (personality === "Adventurous") genre = "action";
            if (personality === "Shy" && mood !== "Scary") genre = "sad";

            document.body.className = genre;

            const movieList = movies[genre] || [];
            const moviesDiv = document.getElementById('movies');
            moviesDiv.innerHTML = "";

            movieList.forEach(movie => {
                const div = document.createElement("div");
                div.className = "movie";
                div.innerHTML = `
                    <img src="${movie.img}">
                    <h3>${movie.title}</h3>
                    <p>Watch on: ${movie.platforms.join(", ")}</p>
                `;
                moviesDiv.appendChild(div);
            });

            document.getElementById("results").style.display = "block";
            window.scrollTo({ top: 600, behavior: "smooth" });
        });
    </script>

</body>
