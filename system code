        }

        select, button {
            padding: 12px 15px;
            margin: 10px;
            border-radius: 6px;
            border: none;
            font-size: 16px;
        }

        button {
            background: #ff4757;
            color: white;
            cursor: pointer;
            transition: 0.3s;
        }

        button:hover {
            background: #e84118;
            transform: scale(1.05);
        }

        .movie {
            width: 250px;
            background: #1e1e1e;
            display: inline-block;
            margin: 15px;
            padding: 10px;
            border-radius: 12px;
            transition: 0.4s;
            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        }

        .movie:hover {
            transform: scale(1.1);
        }

